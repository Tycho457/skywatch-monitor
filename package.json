{
  "name": "skywatch-monitor",
  "version": "1.0.0",
  "description": "",
  "private": "true",
  "main": "index.js",
  "scripts": {
    "lint": "eslint . --ext .vue,.js,.ts,.jsx,.tsx,.md --max-warnings 0 --cache",
    "lint:fix": "pnpm run lint --fix",
    "prepare": "husky install",
    "commit": "cz",
    "changeset": "changeset",
    "update:version": "changeset version",
    "release": "changeset publish",
    "monitor:build": "pnpm run -C ./packages/monitor build",
    "monitor:build:watch": "pnpm run -C ./packages/monitor build:watch",
    "server": "pnpm run -C ./packages/server start"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.1",
    "@commitlint/cli": "^17.6.3",
    "@commitlint/config-conventional": "^17.6.3",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.32.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-jsonc": "^2.6.0",
    "eslint-plugin-markdown": "^3.0.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-vue": "^9.20.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "prettier": "^3.2.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "engines": {
    "node": ">= 16"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,vue,md}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@rollup/plugin-eslint": "^9.0.5"
  }
}
